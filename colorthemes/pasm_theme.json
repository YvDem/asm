{
	"$schema": "vscode://schemas/color-theme",
	"name": "pasm++",
	"tokenColors": [
		{
			"name": "Function declarations",
			"scope": [
				"entity.name.function",
				"support.function",
				"support.constant.handlebars",
				"source.powershell variable.other.member",
				"entity.name.operator.custom-literal" // See https://en.cppreference.com/w/cpp/language/user_literal
			],
			"settings": {
				"foreground": "#DCDCAA"
			}
		},
		{
			"name": "Macros syntax",
			"scope": [
				"macro.start",
				"macro.end",
			],
			"settings": {
				"foreground": "#7a756eb0"
			}
		},
		{
			"name": "register names",
			"scope": [
				"variable.other.register"
			],
			"settings": {
				"foreground": "#f0f0f0",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Macro names",
			"scope": [
				"macro.name"
			],
			"settings": {
				"foreground": "#ab9cb3"
			}
		},
		{
			"name": "Operators",
			"scope": [
				"punctuation.definition.double_colon"
			],
			"settings": {
				"foreground": "#daaa0ee7",
				"fontStyle": "bold"
			}
		},
		{
			"name": "comments",
			"scope": [
				"comment",
				"punctuation.definition.comment",
				"comment.line"
			],
			"settings": {
				"foreground": "#6A9955"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"keyword.control",
				"source.cpp keyword.operator.new",
				"keyword.operator.delete",
				"keyword.other.using",
				"keyword.other.directive.using",
				"keyword.other.operator",
				"entity.name.operator"
			],
			"settings": {
				"foreground": "#7797ff"
			}
		},
		{
			"name":"Control flow and loop keywords",
			"scope": [
				"keyword.controlflow"
			],
			"settings": {
				"foreground": "#e676cadb",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Variable and parameter name",
			"scope": [
				"variable",
			],
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"name": "Numeric values",
			"scope": [
				"constant.numeric",
			],
			"settings": {
				"foreground": "#a1c5f5f2",
			}
		},
		// Decimal
		{
			"name":"Decimal",
			"scope": [
				"constant.numeric.decimal"
			],
			"settings": {
				"foreground": "#73c398f2",
			}
		},
		// Binary
		{
			"name":"Binary",
			"scope": [
				"constant.numeric.binary"
			],
			"settings": {
				"foreground": "#b5cea8",
			}
		},
		// Labels
		{
			"name":"Labels",
			"scope": [
				"label"
			],
			"settings": {
				"foreground": "#daa7fa",
				"fontStyle": "underline"
			}
		},
		// Octals
		{
			"name":"Octals",
			"scope": [
				"constant.numeric.octal"
			],
			"settings": {
				"foreground": "#99eabff2",
			}
		},
		// Hex litterals
		{
			"name": "Hex litterals",
			"scope": [
				"constant.numeric.hex"
			],
			"settings": {
				"foreground": "#90a7ec"
			}
		}
	]
}