{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pinguin assembly",
	
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#instruction"
		},
		{
			"include": "#label"
		},
		{
			"include": "#operator"
		},
		{
			"include": "#number"
		},
		{
			"include": "#string"
		}
	],

	"repository": {
		"comment": {
			"patterns": [
				{
					"begin": ";",
					"end": ".*",
					"captures": {
						"0": {
							"name": "comment.line"
						}
					}
				}
			]
		},
		"instruction": {
			"patterns": [
				{
					"match": "\\b(ADDLW|ADDWF|ANDLW|ANDWF|BCF|BSF|BTFSC|BTFSS|CALL|CLRF|CLRW|CLRWDT|COMF|DECF|DECFSZ|GOTO|INCF|INCFSZ|IORLW|IORWF|MOVF|MOVLW|MOVWF|NOP|OPTION|RETLW|RLF|RRF|SLEEP|SUBWF|SWAPF|TRIS|XORLW|XORWF|MOVLB|RETFIE|RETURN)\\b",
					"captures": {
						"0": {
							"name": "keyword.control"
						}
					}
				}
			]
		},
		"number": {
			"patterns": [
				{
					"match": "(B'[0-1]*')",
					"captures": {
						"0": {
							"name": "constant.numeric.binary"
						}
					}
				},
				{
					"match": "(0x[0-9a-fA-F]*)",
					"captures": {
						"0": {
							"name": "constant.numeric.hex"
						}
					}
				},
				{
					"match": "(D'[0-9]*')",
					"captures": {
						"0": {
							"name": "constant.numeric.decimal"
						}
					}
				},
				{
					"match": "(O'[0-7]*')",
					"captures": {
						"0": {
							"name": "constant.numeric.octal"
						}
					}
				},
				{
					"match": "(H'[0-9a-fA-F]'*)",
					"captures": {
						"0": {
							"name": "constant.numeric.hex"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.asm"
}